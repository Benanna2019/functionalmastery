---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { ConvertKitForm } from "../../components/ConvertKitForm";
---

<!doctype html>
<BaseLayout
  title="Functional Mastery"
  description="Home page for Functional Mastery"
>
  <div class="left-0 top-0 h-full w-full overflow-x-clip">
    <section class="min-h-content w-full px-6 pb-12 pt-16 sm:pb-20 sm:pt-52">
      <header class="flex items-center justify-center">
        <div class="mx-auto flex w-1/2 max-w-7xl flex-col gap-6 sm:gap-10">
          <h1
            class="reveal animate-revealHero1 text-balance text-4xl font-[800] leading-[1] -tracking-[2.5px] text-black text-[40px] sm:text-[60px]"
          >
            Functional Mastery Newsletter
          </h1>
          <h2
            class="reveal animate-revealHero2 -mt-2 text-balance text-xl sm:text-2xl font-medium text-black sm:-mt-4"
          >
            Get the latest updates on posts, workshops, tips, and more
          </h2>
        </div>
        <div class="fade animate-fade w-1/2 h-full overflow-x-clip">
          <div class="flex w-full items-center justify-center p-6 md:p-10">
            <div class="w-full max-w-lg">
              <ConvertKitForm client:only="react" />
            </div>
          </div>
        </div>
      </header>
    </section>
  </div>
</BaseLayout>
